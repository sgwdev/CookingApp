<p id="notice"><%= notice %></p>

<div class="recipe-header">
    <div class="recipe-photo"><img src="Images/imageDefaut.jpg" alt="Recipe picture"></div>
    <div class="recipe-info">
      <div class="field">
        <strong><%= @recipe.title %></strong>
      </div>
      
      <div class="recipe-time">
        <div class="field total-time">
          <strong>Total time:</strong>
          <%= @recipe.total_time %> mins
        </div>
        
        <div class="field preparation-time">
          <strong>Preparation time:</strong>
          <%= @recipe.preparation_time %> mins
        </div>

        <div class="field cooking-time">
          <strong>Cooking time:</strong>
          <%= @recipe.cooking_time %> mins
        </div>
      </div>

      <div class="field">
        <strong>Serving:</strong>
        <%= @recipe.serving %>
      </div>
    </div>
    <div class="recipe-description">
      <div class="field">
        <strong>Description:</strong>
        <%= @recipe.description %>
      </div>
    </div>
  </div>
  
  <br />

  <div id="ingredientList" class="dynamic-list">
    <div class="dynamic-list-header">
      <%= label "ingredients", "Ingredients: " %>
    </div>
    <div class="dynamic-list-buttons">
      
    </div>
    <div class="dynamic-list-content">
      <% @recipe.ingredientsRecipes.each do |portion| %>
      - <%= "#{portion.ingredient.name} : #{ portion.amount.to_s + portion.unit.symbol}" %><br/>
      <% end %>
    </div>
  </div>

  <div id="stepList" class="dynamic-list">
    <div class="dynamic-list-header">
      <%= label "steps", "Steps: " %>
    </div>
    <div class="dynamic-list-buttons">
      
    </div>
    <div class="dynamic-list-content">
      <% @recipe.steps.each do |step| %>
      - <%= "#{ step.description}" %><br/>
      <% end %>
    </div>
  </div>

<!--<p>
  <strong>Comment:</strong>
  <%# @recipe.comment %>
</p>-->


<%= link_to 'Edit', edit_recipe_path(@recipe), class: "action-btn" %>
<%= link_to 'Back', recipes_path, class: "soft-btn" %>
